@model Professor

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-light" style="font-family:'Cambria Math'">Delete Professor</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<form asp-controller="Professor" asp-action="SaveDelete" asp-route-Id="@Model.Id" class="row">
			<div class="border p-3">

				<div class="form-floating py-2 col-12">
					<input type="text" disabled asp-for="Name" class="form-control border-0 shadow" />
					<label asp-for="Name" class="ms-2"> </label>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Email" disabled class="form-control border-0 shadow" />
					<label asp-for="Email" class="ms-2"> </label>
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Phone" disabled class="form-control border-0 shadow" />
					<label asp-for="Phone" class="ms-2"> </label>
					<span asp-validation-for="Phone" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="HireDate" disabled class="form-control border-0 shadow" />
					<label asp-for="HireDate" class="ms-2"> </label>
					<span asp-validation-for="HireDate" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="DepartmentID" disabled class="form-control border-0 shadow" />
					<label asp-for="DepartmentID" class="ms-2"> </label>
					<span asp-validation-for="HireDate" class="text-danger"></span>
				</div>

				<div class="row pt-4">
					<div class="col-6">
						<button type="submit" class="btn btn-primary" style="color:#fff;background-color:#CA1929;width:150px">Delete</button>
					</div>
					<div class="col-6 text-end">
						<a asp-controller="Professor" asp-action="Index" class="btn btn-outline-primary border" style="width:150px">Back</a>
					</div>
				</div>

			</div>
		</form>
	</div>
</div>


@model List<Grade>

<div class="card shadow border-0 mt-4" id="Original">
	<div class="card-header bg-gradient ml-0 py-3" style="background-color:rgba(22, 34, 57, 0.95);">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-light" style="font-family:system-ui;">Grades List</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<div class="row pb-4">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Grade" asp-action="Add" class="btn" style="color:white;background-color:#213b56;font-size:15px">
					<i class="bi bi-plus-circle"></i> Create
				</a>
			</div>
		</div>

		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Student Name</th>
					<th>Year</th>
					<th>Grade</th>
					<th>Degree</th>	
				</tr>
			</thead>

			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.StudentName</td>
						<td>@item.Year</td>
						<td>@item.GradeValue</td>
						<td>@item.Degree</td>
						<td style="width:155px;">
							<a asp-controller="Grade" asp-action="Edit" asp-route-Id="@item.Id" class="btn rounded-1" style="color:white;background-color:#213b56;">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
						</td>
						<td style="width:175px;">
							<a asp-controller="Grade" asp-action="Delete" asp-route-Id="@item.Id" class="btn rounded-1" style="color:#fff;background-color:#CA1929;border-color:#CA1929;">
								<i class="bi bi-trash"></i> Delete
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

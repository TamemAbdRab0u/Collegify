@model Course
@{
	SelectList deptoptions = new SelectList(ViewBag.DeptList, "Id", "DepartmentName");
	SelectList profoptions = new SelectList(ViewBag.ProfList, "Id", "Name");
}

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-gradient ml-0 py-3" style="background-color:rgba(22, 34, 57, 0.95);">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-light" style="font-family:'Cambria Math'">Delete Course</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<form method="post" asp-controller="Course" asp-action="SaveDelete" asp-route-Id="@Model.Id" class="row">
			<div class="border p-3">

				<div class="form-floating py-2 col-12">
					<input asp-for="CourseName" disabled class="form-control border-0 shadow" />
					<label class="ms-2">Course Name</label>
					<span asp-validation-for="CourseName" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Credits" disabled class="form-control border-0 shadow" />
					<label class="ms-2">Credits</label>
					<span asp-validation-for="Credits" class="text-danger"></span>
				</div>
				<div>
					<label>Professor</label>
					<select asp-for="ProfessorID" disabled asp-items="profoptions" class="form form-control">
						<option value="0">--Select professor--</option>
					</select>
					<span asp-validation-for="ProfessorID" class="text-danger"></span>
				</div>
				<div>
					<label>Department</label>
					<select asp-for="DepartmentID" disabled asp-items="deptoptions" class="form form-control">
						<option value="0">--Select Department--</option>
					</select>
					<span asp-validation-for="DepartmentID" class="text-danger"></span>
				</div>
				<div class="row pt-4">
					<div class="col-6">
						<button type="submit" class="btn btn-primary" style="color:#fff;background-color:#CA1929;width:150px">Delete</button>
					</div>
					<div class="col-6 text-end">
						<a asp-controller="Course" asp-action="Index" class="btn btn-outline-primary border" style="width:150px">Back</a>
					</div>
				</div>

			</div>
		</form>
	</div>
</div>

@model Department

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-gradient ml-0 py-3" style="background-color:rgba(22, 34, 57, 0.95);">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-light" style="font-family:'Cambria Math'">Delete Department</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<form method="post" asp-controller="Department" asp-action="SaveDelete" asp-route-Id="@Model.Id">
			<div class="border p-3">

				<div class="form-floating py-2 col-12">
					<input type="text" asp-for="DepartmentName" disabled class="form-control border-0 shadow" />
					<label class="ms-2">Department Name</label>
				</div>
				<div class="form-floating py-2 col-12">
					<input type="text" asp-for="ManagerName" disabled class="form-control border-0 shadow" />
					<label class="ms-2">Manager Name</label>
				</div>

				<div class="row pt-4">
					<div class="col-6">
						<button type="submit" class="btn btn-danger" style="color:#fff;background-color:#CA1929;width:150px">Delete</button>
					</div>
					<div class="col-6 text-end">
						<a asp-controller="Department" asp-action="Index" class="btn btn-outline-primary border" style="width:150px">Back</a>
					</div>
				</div>

			</div>
		</form>
	</div>
</div>
